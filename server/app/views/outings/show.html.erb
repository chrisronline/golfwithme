<p id="notice"><%= notice %></p>

<h2>Details</h2>
<h3><%= @outing.title %></h3>
<p>
<h5><%= @outing.description %></h5>
<p>
  <strong>Start time:</strong>
  <%= @outing.start_time %>
</p>

