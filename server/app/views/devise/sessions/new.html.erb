<div class='row'>
<div class='col-sm-4'></div>
<div class='col-sm-4'>
<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, class: 'form-control',  placeholder: "Email", label: false %>
    <%= f.input :password, required: false, class: 'form-control',  placeholder: "Password", label: false%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class='col-sm-4'></div>
</div>